<!DOCTYPE html>
<html>


num1 = (input("Enter the first number: "))
operator = input("Enter an operator (+, -, *, /): ")
num2 = (input("Enter the second number: "))


if operator == '+':
    result = num1 + num2
elif operator == '-':
    result = num1 - num2
elif operator == '*':
    result = num1 * num2
elif operator == '/':
    if num2 != 0:
        result = num1 / num2
    else:
        result = "Error: Cannot divide by zero"
else:
    result = "Invalid operator"

print("Result:", result)

</html>
